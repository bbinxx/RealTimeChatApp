<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat-io</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
</head>
<style>
    #chat {
        max-height: 500px;
        min-height: 500px;
        background-color: aliceblue;
        overflow-y: scroll;
    }
</style>


<body>
    <%=user.user.providerData[0].displayName%>
    <section class="container">
        

        <div id="chat">

        </div>
        <br>
        <input type="text" id="msg" class="form-control"  placeholder="Message" required>

        <button class="btn btn-primary btn-lg btn-block" onclick="send()">send</button>
    </section>
</body>
<script src="https://cdn.socket.io/4.7.4/socket.io.min.js" integrity="sha384-Gr6Lu2Ajx28mzwyVR8CFkULdCU7kMlZ9UthllibdOSo6qAiN+yXNHqtgdTvFXMT4" crossorigin="anonymous"></script>
<script>
    var socket = io();
    socket.on('disconnect', () => {
       // console.log("Disconnected");
    });

    socket.on('showmsg', (data) => {
        //console.log(data);
        var chat = document.getElementById("chat");
        var p = document.createElement('p');
        let displayName = "<%=user.user.providerData[0].displayName%>";
        let uid = "<%=user.user.uid%>";
        console.log(displayName);
        console.log(uid);


        p.innerHTML = data.userName + ": " + data.data;
        chat.append(p);
        chat.scrollTop = p.offsetHeight + p.offsetTop;
    });

    function send() {
        var msgField = document.getElementById("msg");
        //var usernameField = document.getElementById("username");

        var msg = msgField.value;
        //var username = usernameField.value;

        socket.emit('msg', { msg: msg });
        msgField.value = '';

    }

    window.addEventListener('keydown', function (e) {
  if (e.key === 'Enter') {
    send();
  }
}, false);
    
</script>

</html>